<div>
    <h2>Vendedor</h2>
    <hr />
    @*DL , lista os campos do objeto*@
    <dl class="dl-horizontal">
        @*dt, mostra o nome do campo*@
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        @*dd, mostra o valor do campo*@
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SalarioBase)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SalarioBase)
        </dd>
    </dl>
